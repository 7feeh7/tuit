{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",                                  
    "module": "node16",                                
    "rootDir": "src",                                                                               
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@adapters/*": ["adapters/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },                                 
  }
}
